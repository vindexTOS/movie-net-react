{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=(LocalDb)\\SigmaMovieDb;Database=SigmaMoviesDb;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "JWTConfiguration": {
    "Secret": "TheSecretOfSecrets",
    "ExpirationInMinutes": 60
  },

  "AllowedHosts": "*",

  "Serilog": {
    //"Using": [ "Serilog.Sinks.File",  ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/Log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3} {Username} {Message:lj}{Exception}{NewLine}"
        }
      }
    ]
  }
}
